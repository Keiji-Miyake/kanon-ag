{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2020"
        ],
        "types": [
            "node"
        ],
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "../../dist",
        "rootDir": "..",
        "skipLibCheck": true
    },
    "include": [
        "../**/*.ts"
    ],
    "exclude": [
        "../extension/**/*.ts",
        "./e2e-test.ts"
    ]
}